generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  birthDay DateTime
  city String
  phone String
  email String @unique
  church String
  minimisty Ministry
  otherMinistry String
  days Int
  q1 Boolean
  q2 String
  q3 Boolean
  q4 Boolean
  master_q String
  certificate String
  buy_undershirt Size @default(No)
  but_shopper Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Ministry {
  WORSHIP_LEADER
  WORSHIP_MINISING
  PASTOR
  PASTOR_HELPER
  OTHER
  NOTHING
  NOT_BELIAVE
}

enum Size {
  No
  L
  M
  S
}

model Sponsor {
   id String @id @default(auto()) @map("_id") @db.ObjectId
   fullName String
   email String
   phone String
   price Int
   message String
}